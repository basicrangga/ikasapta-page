head
	meta(charset="UTF-8")
	meta(content="IE=edge",http-equiv="X-UA-Compatible")
	meta(content="width=device-width,initial-scale=1" name="viewport")
	meta(content="description" name="description")
	meta(name="google" content="notranslate")
	
	meta(name="msapplication-tap-highlight" content="no")
	title Title page
	link(rel="stylesheet", href="/main.97292821.css")
	link(rel="stylesheet", href="/css/ikasapta.css")

body
	header
		-let navbarActive = "about-us"
		include includes/_navbar

	div(
		class="background-image-container white-text-container bg__home" 
		style="background-image: url('/assets/images/5.jpg')"
		)
		div(class="overlay")
		div(class="container")
			div(class="row")
				div(class="col-xs-12")
					h1(class="h1 main-heading") Ikasapta
					p(class="") IKATAN ALUMNI SMA NEGERI 7 KEDIRI
	
	div(class="section-container")
		div(class="container")
			div(class="row")
				div(class="col-xs-12 col-md-12 section-container-spacer")
					h2(class="text-center") Vision
			- let values= []
			-	values.push({icon:"fa-comment-o",key:"Mengakomodasi",text:"Alumni mengakomodasi ide dan langkah agar IKASAPTA bermanfaat baik"})
			-	values.push({icon:"fa-chain",key:"Menyatukan",text:"IKASAPTA adalah satu keluarga"})
			-	values.push({icon:"fa-hourglass-o",key:"Merawat",text:"Mengoptimalkan sumber yang ada dan mendukung potensi secara berkala"})
				
			div(class="row")
			each value in values
					div(class="col-xs-12 col-sm-4 col-md-4 values-container-spacer")
						div(class="fa-container")
							i(class=`fa ${value.icon} fa-2x` aria-hidden="true")
						h3(class="text-center") #{value.key}
						p(class="text-center") #{value.text}
							 
	div(class="section-container section-half-background-image-container")
		div(class="image-column" style="background-image:url('/assets/images/1.jpg')")
		div(class="container")
			div(class="row")
				div(class="section-label reveal")
					p IKASAPTA
				div(class="col-md-6 col-md-offset-6 text-column")
					- let todayDate = new Date()
					- diffYear = todayDate.getFullYear() - 1992
					- let totalAlumni = diffYear*250;
					h2 #{diffYear} Tahun <br> Mencapai <br>#{totalAlumni} Alumni<small>*</small>
					p
						| Mari bersama memberikan kontribusi positif kepada masyarakat dan almamater
					p
						small *estimated
	div(class="section-container")
		div(class="container")
			div(class="row")
				div(class="col-xs-12 col-md-12 section-container-spacer")
					h2(class="text-center") Gallery
			div(class="row")
				- let pictures= []
				-	pictures.push({title:"Peresmian CSC IKASAPTA",image:"/assets/images/1.jpg"})
				-	pictures.push({title:"Pengenalan Kehidupan Kampus",image:"/assets/images/4.jpg"})
				-	pictures.push({title:"Reuni Akbar",image:"/assets/images/5.jpg"})
				-	pictures.push({title:"NGOBAR, Ngopi bareng CSC IKASAPTA Malang dan Surabaya",image:"/assets/images/2.jpg"})
				-	pictures.push({title:"CRIA, CSC Ramadhan In Action",image:"/assets/images/3.jpg"})

				each picture in pictures
					div(class="col-xs-6 col-xs-12 col-md-4")
						img(src=picture.image class="img-responsive")
						h4(class="text-center") #{picture.title}
	include includes/_footer